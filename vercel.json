{
  "version": 2,
  "builds": [
    {
      "src": "WeatherScraper.py",
      "use": "@vercel/python"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/WeatherScraper.py"
    },
    {
      "src": "/static/(.*)",
      "headers": { "cache-control": "s-maxage=31536000,immutable" },
      "dest": "/build/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/build/$1"
    }
  ],
    "rewrites": [
      { "source": "/(.*)", "destination": "/" }
    ]
  
}
